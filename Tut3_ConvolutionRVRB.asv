%--------------------------------------------------------------------------
%Load dry audio and Convert to mono

[x, Fs] = audioread("pluck.wav");     

%Convert to Mono if Stereo

if size(x,2) == 2
    x = mean(x,2);
end


y = x / max(abs(x));
Nx = length(x);


%--------------------------------------------------------------------------
%Load the impulse response

[h1, fs1] = audioread('LargeHall.wav');

[h2, fs2] = audioread('Church.wav');

%--------------------------------------------------------------------------
%Convert IR to Mono

if size(h1,2) == 2
    h1 = mean(h1,2);
end

if size(h2,2) == 2
    h2 = mean(h2,2);
end

%--------------------------------------------------------------------------
%Ensure sampling rates match

if fs ~= fs1
    h1 = resample(h1, fs, fs1);
end

if fs ~= fs2
    h2 = resample(h2, fs, fs2);
end

%--------------------------------------------------------------------------
%Convolution

y_hall = conv(x, h1);
y_church = conv(x, h2);

%-------------------------------------------------------------------------
